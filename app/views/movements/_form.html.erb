<p id="notice">
    <% if notice.present? %>
        <ul>
            <% notice.each do |err| %>
                <li><%= err[0] %></li>
            <% end %> 
        </ul>
    <% end %> 
</p>

<p id="error"><%= flash[:error] %></p>

<%= form_tag({ :action => :csv_file_import }, multipart: true) do %>
    <div class='form-group'>
        <%= label_tag(:file, "Selecione um arquivo CSV") %>
        <%= file_field_tag :file, required: true, class: 'form-control-file' %>
    </div>

    <div class='form-group'>
        <%= submit_tag( "Importar", class: 'btn btn-primary' ) %>
    </div>
<% end %>